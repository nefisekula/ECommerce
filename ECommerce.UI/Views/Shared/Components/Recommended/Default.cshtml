                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="images/home/recommend1.jpg" alt="" />
                                    <h2>@product.Price</h2>
                                    <p>@product.Name</p>
                                    <a href='@Url.Action("ProductDetail", "Product", new { productId = product.ID})' class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

